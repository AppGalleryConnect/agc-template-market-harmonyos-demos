{
  "module": {
    "name": "device_add",
    "type": "har",
    "deviceTypes": [
      "default"
    ],
    "routerMap": "$profile:route_map",
    "requestPermissions": [
      {
        "name": "ohos.permission.ACCESS_BLUETOOTH",
        "reason": "$string:bluetooth_access",
        "usedScene": {
          "abilities": [
            "EntryAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.PRIVACY_WINDOW",
        "reason": "$string:privacy_window_access",
        "usedScene": {
          "abilities": [
            "EntryAbility"
          ],
          "when": "inuse"
        }
      }
    ]
  }
}
